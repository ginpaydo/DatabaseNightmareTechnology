<Window x:Class="DatabaseNightmareTechnology.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title.Value}" Height="600" Width="800"
        Style="{Binding Source={StaticResource DefaultWindowStyle}}">
    <i:Interaction.Triggers>
        <!-- 画面が表示されたときの初期処理イベント -->
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ToHome}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
